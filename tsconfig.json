{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/atoms": ["src/components/atoms"],
      "@/components/molecules": ["src/components/molecules"],
      "@/components/organisms": ["src/components/organisms"],
      "@/components/templates": ["src/components/templates"],
      "@/components/pages": ["src/components/pages"],
      "@/services": ["src/services"],
      "@/utils": ["src/utils"],
      "@/hooks": ["src/hooks"],
      "@/stitches": ["stitches.config.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
